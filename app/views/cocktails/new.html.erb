<h2><i class="fas fa-glass-martini"></i>Create a new cocktail</h2>
<%= simple_form_for [@cocktail] do |f| %>
  <%= f.input :name %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.submit "add a cocktail", class: "btn btn-warning" %>
<% end %>
<%= link_to "Return to the list", cocktails_path %>

