<div class = "card" style="background-image: linear-gradient(rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) ),
       url('<%= cl_image_path @cocktail.photo %>')">
  <h2 class="card-description"><%= @cocktail.name %></h2>
</div>
  <br>
  <h3> <i class="fas fa-glass-martini"></i> Recipe </h3>
  <ul id = "doses">
  <% @cocktail.doses.each do |d|%>
    <li data-dose-id="<%= d.id %>"><%= render 'doses/show', dose: d %>&nbsp;<%= link_to "Delete dose", dose_path(d), method: :delete,  remote: true %></li>
  <% end %>
  </ul>
  <h3><i class="fas fa-glass-martini"></i>Add some doses</h3>
  <%= render 'doses/form', cocktail: @cocktail, dose: @dose %>
</div>
</div>



